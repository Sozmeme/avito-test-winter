# Используем официальный образ Go
FROM golang:1.23.2

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем файлы проекта
COPY . .

# Скачиваем зависимости
RUN go mod download

# Собираем приложение
RUN go build -o main .

# Открываем порт 8080
EXPOSE 8080

# Запускаем приложение
CMD ["./main"]